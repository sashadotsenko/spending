<%= form_with model: @cost do |f| %>
  <div class="form-group">
    <%= f.label :category_id, 'Category' %>
    <%= f.select :category_id, @categories, {}, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :amount, 'Amount($)' %>
    <%= f.number_field :amount, step: :any, min: 0, max: 10000, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description..', class: "form-control" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Edit Cost", class: "btn btn-dark" %>
  </div>
<% end %>
