<div class="new_user">
  <section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline mb-4">
                <%= f.label :login %><br />
                <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control form-control-lg" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
              </div>

              <div class="d-flex justify-content-center">
                <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
              </div>


              <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="#!"
                class="fw-bold text-body"><u><%= render "devise/shared/links" %></u></a></p>
                <% end %>
              </div>

              <p class="text-center text-muted mb-0">Sign up with:</p>
              <div class="d-flex justify-content-center mb-3">
                <%= button_to 'Google', '/auth/google_oauth2', method: :post, data: { turbo: false }, remote: true, class: 'btn btn-outline-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
